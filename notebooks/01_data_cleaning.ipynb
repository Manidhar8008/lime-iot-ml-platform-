
# =========================================================
# Seoul Bike Data Cleaning — Contract Enforcement
# File: notebooks/01_data_cleaning.ipynb
# =========================================================

import pandas as pd
import numpy as np

pd.set_option("display.max_columns", None)
pd.set_option("display.width", 120)

# ---------------------------------------------------------
# 1. Load Raw Data
# ---------------------------------------------------------
RAW_PATH = "../data/raw/seoul_bike/seoul_bike_rentals.csv"
df = pd.read_csv(RAW_PATH)

print("Raw shape:", df.shape)
df.head()

# ---------------------------------------------------------
# 2. Normalize Column Names (Contract Stability)
# ---------------------------------------------------------
df.columns = (
    df.columns
    .str.strip()
    .str.lower()
    .str.replace(" ", "_")
)

print("Normalized columns:")
print(df.columns.tolist())

# ---------------------------------------------------------
# 3. Parse Date (NO GUESSING)
# ---------------------------------------------------------
df["date"] = pd.to_datetime(df["date"], errors="coerce")

print("Invalid dates:", df["date"].isna().sum())

# ---------------------------------------------------------
# 4. Enforce Hard Invariants (Remove Impossible Reality)
# ---------------------------------------------------------

# Demand cannot be negative
df = df[df["rented_bike_count"] >= 0]

# Hour must be 0–23
df = df[df["hour"].between(0, 23)]

# Temperature must be physically plausible
df = df[df["temperature"].between(-30, 50)]

# ---------------------------------------------------------
# 5. Drop Rows That Break Decision Safety
# ---------------------------------------------------------
critical_fields = [
    "date",
    "hour",
    "rented_bike_count",
    "temperature"
]

df = df.dropna(subset=critical_fields)

print("After invariant enforcement:", df.shape)

# ---------------------------------------------------------
# 6. Normalize Categorical Fields
# ---------------------------------------------------------
df["holiday"] = (
    df["holiday"]
    .str.lower()
    .str.strip()
    .map({
        "holiday": "holiday",
        "no holiday": "non_holiday"
    })
)

df["functioning_day"] = (
    df["functioning_day"]
    .str.lower()
    .str.strip()
    .map({
        "yes": "yes",
        "no": "no"
    })
)

# ---------------------------------------------------------
# 7. Create Time Features (Decision-Ready)
# ---------------------------------------------------------
df["day_of_week"] = df["date"].dt.day_name()
df["month"] = df["date"].dt.month
df["year"] = df["date"].dt.year
df["is_weekend"] = df["day_of_week"].isin(["Saturday", "Sunday"])

# ---------------------------------------------------------
# 8. Create Season (Explainable Logic)
# ---------------------------------------------------------
def get_season(month):
    if month in [12, 1, 2]:
        return "winter"
    elif month in [3, 4, 5]:
        return "spring"
    elif month in [6, 7, 8]:
        return "summer"
    else:
        return "fall"

df["season"] = df["month"].apply(get_season)

# ---------------------------------------------------------
# 9. Weather Stress Signals (NOT MODELS)
# ---------------------------------------------------------
df["is_rain"] = df["rainfall_mm"] > 0
df["is_snow"] = df["snowfall_cm"] > 0
df["bad_weather"] = df["is_rain"] | df["is_snow"]

# ---------------------------------------------------------
# 10. Final Contract Assertions (MUST PASS)
# ---------------------------------------------------------
assert df["rented_bike_count"].min() >= 0
assert df["hour"].between(0, 23).all()
assert df["temperature"].between(-30, 50).all()
assert df["date"].isna().sum() == 0

print("All data contracts enforced successfully.")

# ---------------------------------------------------------
# 11. Save Processed Dataset
# ---------------------------------------------------------
PROCESSED_PATH = "../data/processed/seoul_bike/seoul_bike_features.csv"
df.to_csv(PROCESSED_PATH, index=False)

print(f"Cleaned data saved to: {PROCESSED_PATH}")
print("Final shape:", df.shape)

df.sample(5)
